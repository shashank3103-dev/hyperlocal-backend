########################################
# Server
########################################
# Port your backend will run on
PORT=5000

########################################
# Database (Postgres via Docker)
########################################
# Local development (Mac/Host machine)
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/localfast_db?schema=public"

# Docker internal network (when app + db both run inside docker-compose)
# DATABASE_URL="postgresql://postgres:postgres@db:5432/localfast_db?schema=public"

########################################
# Security
########################################
# JWT secret for signing tokens
JWT_SECRET="changeme"

# JWT expiry (e.g., 7d, 1h, 30m)
JWT_EXPIRES_IN="7d"

# Bcrypt salt rounds (higher = more secure, but slower)
BCRYPT_ROUNDS=10

########################################
# Misc
########################################
# Add other configs here if needed
